# [advice from AI] 환경변수 예시 파일 - 실제 사용 시 .env로 복사 후 값 입력

# ElevenLabs TTS API Key (필수)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenAI API Key (선택 - LLM 기반 타임스탬프용)
OPENAI_API_KEY=

# 타임스탬프 생성 설정
SPEECH_RATE=5.5
TURN_GAP_MIN=0.5
TURN_GAP_MAX=1.5
ACTION_DURATION=2.0
SILENCE_PADDING=0.3

# TTS 음성 설정 (랜덤 사용 시 비워두기)
VOICE_AGENT=
VOICE_CUSTOMER=

# 파일 보관 설정 (일 단위, 0=무제한)
FILE_RETENTION_DAYS=30

# 동시 작업 수 제한
MAX_CONCURRENT_JOBS=3

